<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.TaiKhoanCaNhanActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbartaikhoancanhan"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
    <RelativeLayout
        android:background="#a845de"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/imageviewtaikhoan"
            android:layout_marginLeft="5dp"
            android:src="@drawable/usertoolbar"
            android:layout_marginTop="12dp"
            android:layout_width="45dp"
            android:layout_height="45dp"/>
        <TextView
            android:text=""
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_toRightOf="@id/imageviewtaikhoan"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/textviewtentaikhoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:text="VIP"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_toRightOf="@id/imageviewtaikhoan"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/textviewtentaikhoan"
            android:id="@+id/textviewtencasibaihathot"
            android:layout_width="110pt"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <TextView
        android:paddingLeft="5dp"
        android:id="@+id/textviewdoimatkhau"
        android:textSize="17sp"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:textAlignment="gravity"
        android:drawableLeft="@drawable/iconchangepassword"
        android:text="  Đổi mật khẩu"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>
    <TextView
        android:paddingLeft="5dp"
        android:id="@+id/textviewdangxuat"
        android:textSize="17sp"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:textAlignment="gravity"
        android:drawableLeft="@drawable/iconlogout"
        android:text="  Đăng xuất"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

</LinearLayout>