<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageviewbaihathot"
        android:scaleType="fitXY"
        android:layout_margin="5dp"
        android:layout_width="80dp"
        android:layout_height="80dp"/>
    <TextView
        android:text="Ten bai hat"
        android:textSize="18sp"
        android:textColor="#363636"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_toRightOf="@id/imageviewbaihathot"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/textviewtenbaihathot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#8c8a8a"
        android:textSize="17sp"
        android:text="Ca si"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_toRightOf="@id/imageviewbaihathot"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/textviewtenbaihathot"
        android:id="@+id/textviewtencasibaihathot"
        android:layout_width="90pt"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/imageviewmenu"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/iconmenu" />
</RelativeLayout>