<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_margin="15dp"
            android:textSize="20sp"
            android:text="1"
            android:layout_width="wrap_content"
            android:id="@+id/textviewdanhsachindex"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textviewtenbaihat"
            android:textSize="20sp"
            android:text="Ten ca khuc"
            android:textColor="#030303"
            android:layout_toRightOf="@id/textviewdanhsachindex"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxWidth="250dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Ca si"
            android:textSize="20sp"
            android:textColor="#979797"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@id/textviewdanhsachindex"
            android:layout_below="@id/textviewtenbaihat"
            android:id="@+id/textviewtencasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/imageviewmenu"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/iconmenu" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>