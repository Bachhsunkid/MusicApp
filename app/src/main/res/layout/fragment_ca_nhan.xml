<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/imageviewcanhan"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/usertoolbar" />
        <TextView
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:text=""
            android:layout_toRightOf="@id/imageviewcanhan"
            android:id="@+id/textviewfrtaikhoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <ScrollView
        android:background="#a845de"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:id="@+id/textviewgoiydangnhap"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:textStyle="italic"
            android:layout_gravity="center"
            android:text="Đăng nhập để tận hưởng,trải nghiệm nghe nhạc tuyệt vời nhất!"
            android:layout_width="250dp"
            android:layout_height="match_parent"/>
    </ScrollView>

    <ImageButton
        android:id="@+id/buttonphatnhac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#951E8D"
        android:src="@drawable/iconnnhac"
        android:text="Phát nhạc cá nhân" />

    <TextView
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:text="DANH SÁCH BÀI HÁT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleviewbaihatcanhan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>


</LinearLayout>